{% if posts is empty%}
    <div class="alert alert-info text-center" role="alert">Nenhum grito ainda!? clique logo em "<span class="glyphicon glyphicon-bullhorn"></span> Shout!" ali no topo ;)</div>
{% endif %}

{% for post in posts %}
<div class="blog-post">
  <p class="blog-post-meta"><a href="?shouter={{ post.shouter }}">{{ post.shouter }}</a> soltou o verbo em {{ post.when|date('d/m/Y') }}</p>

  <blockquote>
    <p>{{ post.shout }}</p>
  </blockquote>
  {% include 'partials/tags.html.twig' with { 'tags': post.tags } %}
  <br />
{#  {% include 'partials/like.html.twig' with { 'likes': post.likes } %}#}
{#  {% include 'partials/comments.html.twig' with { 'comments': post.comments } %}#}
</div>
<hr />
{% endfor %}


