{% if posts is empty%}
    <div class="alert alert-info text-center" role="alert">Nenhum grito ainda!? clique logo em "<span class="glyphicon glyphicon-bullhorn"></span> Shout!" ali no topo ;)</div>
{% endif %}

{% for post in posts %}
<div class="blog-post">
  <p class="blog-post-meta"><a href="?autor={{ post.autor }}">{{ post.autor }}</a> soltou o verbo em {{ post.data }}</p>

  <blockquote>
    <p>{{ post.conteudo }}</p>
  </blockquote>
  {% include 'partials/tags.html.twig' with { 'tags': post.tags } %}
{#  {% include 'partials/like.html.twig' with { 'likes': post.likes } %}#}
{#  {% include 'partials/comments.html.twig' with { 'comentarios': post.comentarios } %}#}
</div>
<hr />
{% endfor %}


