<div class="modal fade" id="novo-pitaco" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style='z-index: 20000!important'>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Pitacando...</h4>
      </div>
      <div class="modal-body">
        <form id="form-novo-pitaco" method="POST" class="form-horizontal" action="?action=pitaco">
          <input type="hidden" id="postid" name="data[postid]" />
          <div class="well">
            <div class="form-group">
              <label class="col-lg-4" for="pitaco_pitaco">Pitaco:</label>
              <div class="col-lg-8">
                <textarea name="data[pitaco]" class="form-control" id="pitaco_pitaco"></textarea>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-4" for="pitaco_pitaqueiro">Pitaqueiro:</label>
              <div class="col-lg-8">
                <input type="text" name="data[pitaqueiro]" class="form-control" id="pitaco_pitaqueiro" />
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
        <button type="button" class="btn btn-primary btn-salvar-pitaco">Salvar</button>
      </div>
    </div>
  </div>
</div>