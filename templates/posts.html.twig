{% extends 'base.html.twig' %}
{% block main %}
  {% include 'partials/post.html.twig' %}
<div class="modal fade" id="novo-post" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Nova postagem</h4>
      </div>
      <div class="modal-body">
        <form id="form-novo-post" method="POST" class="form-horizontal" action="?acao=novo-post">
          <div class="well">
            <div class="form-group">
              <label class="col-lg-4" for="post_conteudo">Texto:</label>
              <div class="col-lg-8">
                <textarea name="dados[conteudo]" class="form-control" id="post_conteudo"></textarea>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-4" for="post_tags">Tags:</label>
              <div class="col-lg-8">
                <input type="text" name="dados[tags]" class="form-control" id="post_tags" />
                <p style="text-align:center"><small>(separadas por v√≠rgula)</small></p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-4" for="post_autor">Autor:</label>
              <div class="col-lg-8">
                <input type="text" name="dados[autor]" class="form-control" id="post_autor" />
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
        <button type="button" class="btn btn-primary btn-salvar-post">Salvar</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block javascript %}
$('.btn-salvar-post').click(function(){
    $('#form-novo-post').submit();
});
{% endblock %}